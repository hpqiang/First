@model IEnumerable<LNDLWcfService.CodeFirstEntities.Company>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Addresses.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Addresses.Street)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Contacts.FirstName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.BriefName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebSite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSince)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Addresses.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addresses.Street)
        </td>
        <td>
            @foreach (var x in item.Contacts)
            {
                @*@Html.DisplayFor(modelItem => x.FirstName)
                @Html.DisplayFor(modelItem => x.LastName)*@
                string s = x.FirstName + " " + x.LastName;
                @Html.Raw(s)

            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BriefName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebSite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateSince)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

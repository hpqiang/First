<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>
        .mybackground{
            background-color: blue;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top mybackground">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <b class="navbar-brand">Admin</b>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Users", "Users", "Admin")</li>
                    <li>@Html.ActionLink("Products", "Products", "Admin")</li>
                    <li>@Html.ActionLink("Orders", "Orders", "Admin")</li>
                    <li>@Html.ActionLink("Manufacture", "Manufacture", "Admin")</li>
                    <li>@Html.ActionLink("Inventory", "Inventory", "Admin")</li>
                    <li>@Html.ActionLink("Sales", "Sales", "Admin")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Admin")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
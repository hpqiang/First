<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>
        .mybackground {
            background-color: lightsteelblue;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top mybackground">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Customers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <b class="navbar-brand">Customers</b>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Customer Home", "Index", "Customer")</li>
                    @*<li>@Html.ActionLink("Order", "Order", "Customer")</li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Order<span class="caret"></span></a>
                        <ul class="dropdown-menu mybackground" role="menu">
                            <li>@Html.ActionLink("New Order", "NewOrder", "Customer")</li>
                            <li>@Html.ActionLink("Order History", "OrderHistory", "Customer")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Invoice", "Invoice", "Customer")</li>
                    <li>@Html.ActionLink("Payment", "Payment", "Customer")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Customer")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>